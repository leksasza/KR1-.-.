def print_message(func):
    def wrapper():
        gen = func()
        for value in gen:
            if value % 10 == 0:
                print("Have a nice day")
            yield value
    return wrapper


@print_message
def infinite_generator():
    num = 0
    while True:
        yield num
        num += 1


for i in infinite_generator():
    print(i)
